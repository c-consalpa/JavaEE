<?xml version="1.0" encoding="UTF-8"?>
<taglib version="2.1" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee  http://java.sun.com/xml/ns/javaee/web-jsptaglibrary_2_1.xsd">
  <tlib-version>1.0</tlib-version>
  <short-name>test</short-name>
  <uri>/WEB-INF/tlds/test</uri>
  <!-- A validator verifies that the tags are used correctly at JSP
          translation time. Validator entries look like this: 
       <validator>
           <validator-class>com.mycompany.TagLibValidator</validator-class>
           <init-param>
              <param-name>parameter</param-name>
              <param-value>value</param-value>
           </init-param>
       </validator>
    -->
  <!-- A tag library can register Servlet Context event listeners in
         case it needs to react to such events. Listener entries look
         like this: 
      <listener>
          <listener-class>com.mycompany.TagLibListener</listener-class> 
      </listener>
    -->
  <tag>
    <name>currentDate</name>
    <tag-class>customJSTLTags.myTestTag</tag-class>
    <info>Returns current date as of test TLD.</info>
  </tag>
  
  <tag>
    <name>ifWeekDay</name>
    <tag-class>customJSTLTags.ifWeekdayTag</tag-class>
    <info>Shows tag contents on Mon-Fri.</info>
  </tag>
  
  <tag>
      <name>AttributeTag</name>
        <tag-class>customJSTLTags.AttributeTag</tag-class>
        <info>Tag is resolved based on its attributes values;</info>
            <attribute>
                <name>count</name>
                <required>true</required>

            </attribute>
  </tag>
  
    <tag>
      <name>mIterableTag</name>
        <tag-class>customJSTLTags.mIterableTag</tag-class>
        <info>Tag iterates its body based on incoming collection.</info>
        <body-content>JSP</body-content>
  </tag>
</taglib>
